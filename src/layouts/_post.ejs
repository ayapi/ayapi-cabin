<% include ../layouts/_postHead %>
<div class="post-body markdown">
  <%- post.content %>
</div>

<ul class="post-social">
<li class="pocket"><a data-save-url="<%= data.url %><%= data.baseUrl %><%= post.url %>" data-pocket-label="pocket" data-pocket-count="none" class="pocket-btn" data-lang="en"></a></li>
<li class="twitter"><a href="https://twitter.com/share" class="twitter-share-button" data-url="<%= data.url %><%= data.baseUrl %><%= post.url %>" data-text="<%= post.title %> - <%= data.title %>" data-lang="ja" data-count="none">ツイート</a></li>
<li class="hatena"><a href="http://b.hatena.ne.jp/entry/<%= data.url %><%= data.baseUrl %><%= post.url %>" class="hatena-bookmark-button" data-hatena-bookmark-title="<%= post.title %> - <%= data.title %>" data-hatena-bookmark-layout="standard-noballoon" data-hatena-bookmark-lang="ja" title="このエントリーをはてなブックマークに追加"><img src="http://b.st-hatena.com/images/entry-button/button-only@2x.png" alt="このエントリーをはてなブックマークに追加" width="20" height="20" style="border: none;" /></a></li>
<li class="facebook"><fb:like href="<%= data.url %><%= data.baseUrl %><%= post.url %>" layout="button_count" action="like" show_faces="false" share="false"></fb:like></li>
</ul>